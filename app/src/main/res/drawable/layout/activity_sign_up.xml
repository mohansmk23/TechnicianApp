<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient_vertical"
    tools:context=".Activities.Login">



    <ImageView
        android:id="@+id/verifygif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_48dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/verifiedtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otpverified"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_below="@id/verifygif"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/enternametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entername"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_48dp"
        android:layout_below="@id/verifiedtxt"
       android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_18dp"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:drawableLeft="@drawable/person"
        android:drawableTint="@color/Themecolor2"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:maxLength="10"
        android:padding="5dp" />






    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Name"
        android:textColor="@color/white"
        android:background="@color/Themecolor2"
        android:layout_below="@+id/edtname"
        android:layout_centerHorizontal="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:clickable="true"
        android:layout_marginTop="@dimen/margin_42dp"/>







    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/bottom_overlay"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true" />




</RelativeLayout>