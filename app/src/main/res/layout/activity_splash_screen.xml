<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg_img"
    tools:context=".view.SplashScreen">

    <RelativeLayout
        android:id="@+id/center_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/card_background"
        android:backgroundTint="@color/themeColor2"
        android:clipToPadding="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/pe_logo" />

    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/quality_affordable_trust"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

</RelativeLayout>