<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/picked_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                app:cardCornerRadius="@dimen/card_view_radius">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/green"
                    android:drawableEnd="@drawable/icon_like"
                    android:gravity="center|left"
                    android:paddingHorizontal="@dimen/margin_24dp"
                    android:text="Job picked up"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/themeColor2"
                    android:paddingVertical="@dimen/card_view_header_padding"
                    android:paddingStart="@dimen/margin_16dp"
                    android:text="Customer Details"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:paddingBottom="@dimen/margin_16dp"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Name"
                            android:textSize="@dimen/text_size_micro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mr.Saravana Kumar"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="@dimen/margin_8dp"
                            android:background="@color/grey_font" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Phone"
                            android:textSize="@dimen/text_size_micro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="@dimen/margin_8dp"
                            android:background="@color/grey_font" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Address"
                            android:textSize="@dimen/text_size_micro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No 23, 3rd Floor\n Modern Tower, West Cott Road, \n Royapettah, Chennai - 600014"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_call"
                            android:tint="@color/white" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/direction"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#ef5350"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_navigation"
                            android:tint="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/themeColor2"
                    android:paddingVertical="@dimen/card_view_header_padding"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:text="Brand"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/card_view_content_margin_top"
                    android:gravity="center|left"
                    android:text="WhirlPool"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/themeColor2"
                    android:paddingVertical="@dimen/card_view_header_padding"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:text="Service Type"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/card_view_content_margin_top"
                    android:gravity="center|left"
                    android:text="Service "
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:clipToPadding="false"
                app:cardCornerRadius="@dimen/card_view_radius"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/themeColor2"
                    android:paddingVertical="@dimen/card_view_header_padding"
                    android:paddingLeft="@dimen/margin_16dp"
                    android:text="More details"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/card_view_content_margin_top"
                    android:gravity="center|left"
                    android:text="Other details"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingHorizontal="4dp"
                    app:cardCornerRadius="@dimen/card_view_radius"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/themeColor2"
                        android:paddingVertical="@dimen/card_view_header_padding"
                        android:paddingLeft="@dimen/margin_16dp"

                        android:text="Date"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="@dimen/card_view_content_margin_top"
                        android:drawableLeft="@drawable/date_icon"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/margin_16dp"
                        android:text="13/02/2019"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingHorizontal="4dp"
                    app:cardCornerRadius="@dimen/card_view_radius"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@color/themeColor2"
                        android:paddingVertical="@dimen/card_view_header_padding"
                        android:paddingLeft="@dimen/margin_16dp"
                        android:text="Time"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="@dimen/card_view_content_margin_top"
                        android:drawableLeft="@drawable/clock_icon"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/margin_16dp"
                        android:text="03:25 PM"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/reachedlay"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2196f3"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Hold Task"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f44336"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Cancel Task"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reachedlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#388e3c"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Hold Task"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

